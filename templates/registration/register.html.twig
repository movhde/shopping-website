{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class="container mx-auto max-w-sm mt-28 bg-white p-6 flex items-center justify-end text-right rounded-2xl shadow-lg">
    <div class="flex flex-col gap-4 w-full max-w-lg">

        <h1 class="font-bold text-xl">ثبت نام</h1>

        {{ form_start(registrationForm) }}
            <div class="flex flex-col gap-2">
                {{ form_label(registrationForm.email, 'ایمیل') }}
                {{ form_widget(registrationForm.email, {
                    'attr': 
                    {
                        'class': 'ltr:ml-0 w-full p-2 outline-none rounded-lg border border-gray-400 focus:border-[#c54b4b]',
                        'autofocus': true
                    }
                }) }}
                {% if form_errors(registrationForm.email) %}
                    <div class="text-center p-2 rounded-lg bg-red-300">
                        {{ form_errors(registrationForm.email) }}
                    </div>
                {% endif %}
                {{ form_label(registrationForm.plainPassword, 'رمز عبور') }}
                {{ form_widget(registrationForm.plainPassword, {
                    'attr': {'class': 'ltr:ml-0 w-full p-2 outline-none rounded-lg border border-gray-400 focus:border-[#c54b4b]'}
                }) }}
                {% if form_errors(registrationForm.plainPassword) %}
                    <div class="text-center p-2 rounded-lg bg-red-300">
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                {% endif %}
                <div class="flex gap-2">
                    {{ form_label(registrationForm.agreeTerms, 'با شرایط موافقم') }}
                    {{ form_widget(registrationForm.agreeTerms, {
                        'attr': {'class': 'outline-none'}
                    }) }}
                </div>
            </div>

            <div class="max-w-lg p-2 mt-4 flex justify-center items-center rounded-lg bg-[#c54b4b] text-white cursor-pointer transition hover:opacity-90">
                <input class="outline-none" id="submitBtn" type="submit" value="ثبت نام">
            </div>

        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}