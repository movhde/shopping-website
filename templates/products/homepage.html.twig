{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto mt-12">
  <div class="grid lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2 grid-cols-1 gap-4">
    {% for product in products %}
    <a href="{{ path('app_products_show', {
      'id': product.id
    }) }}">
      <div class="h-fit min-h-80 shadow-lg rounded-lg p-4 bg-white flex flex-col justify-between items-center border border-white transition duration-200 hover:cursor-pointer hover:border hover:border-black">
        <div class="flex flex-col justify-between items-center gap-4">
        <div class="w-40 h-40">
          <img class="w-full" src="{{ product.imageUrl }}">
        </div>
          <span class="font-bold text-center">{{ product.name }}</span>
        </div>
        <span class="text-lg text-center font-bold float-start">{{ numberConvertor(product.price) }} تومان</span>
      </div>
    </a>
    {% endfor %}
  </div>
{% endblock %}