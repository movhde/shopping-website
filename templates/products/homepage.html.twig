{% extends 'base.html.twig' %}

{% block body %}
  <h2 class="text-center m-6 text-3xl font-bold">... HOMEPAGE ...</h2>
  <div class="container mx-auto p-4 max-w-5xl bg-red-50 flex flex-col gap-4">
    {% for product in products %}
      <div class="flex sm:flex-row flex-col items-center justify-between">
        {% if loop.index0 is divisible by(3) %}
        <div>
        {% endif %}
        <div class="flex flex-col gap-1">
          <div class="w-64 h-64 bg-red-100">{{ product.name }}</div>
          <div class="flex gap-8">
            <div class="p-2 bg-white rounded-lg">{{ product.price }} $</div>
            <div class="p-2 bg-white rounded-lg">{{ product.stock }} stock</div>
          </div>
        </div>
        {% if loop.index is divisible by(3) or loop.last %}
        </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
{% endblock %}