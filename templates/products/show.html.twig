{% extends 'base.html.twig' %}

{% block body %}
<div class="bg-white p-8 container mx-auto mt-20 lg:flex lg:flex-row flex flex-col gap-4 items-center justify-between rounded-lg">
  <div class="lg:flex lg:flex-row flex flex-col items-center gap-4">
    <div class="overflow-hidden">
      <img class="hover:scale-150 transition duration-400" src="{{ product.imageUrl }}" >
    </div>
    <div class="flex flex-col gap-2">
      <span class="text-xl font-bold text-center">{{ product.name }}</span>
      جزئیات
      <span>نکته ۱</span>
      <span>نکته ۲</span>
      <span>نکته ۳</span>
      <span>نکته ۴</span>
      <span>نکته ۵</span>
    </div>
  </div>
  <div class="h-fit border border-gray-200 flex flex-col items-center gap-6 p-6 rounded-lg">
    <div class="flex gap-2 items-center">
      <span class="font-bold text-3xl">{{ product.price|number_format() }}</span><span class="text-xl">تومان</span>
    </div>
    <div class="flex gap-8 border border-gray-300 p-2 text-2xl rounded-lg">
      <a 
      {# href="{{ path('app_increaseAmount', {
        'id': cartItem.id
      }) }}"  #}
      class="outline-none cursor-pointer hover:text-red-600" type="button">+</a>
      <span class="outline-none" type="text">{{ cartItem.amount ?? 1 }}</span>
      <a 
      {# href="{{ path('app_decreaseAmount', {
        'id': cartItem.id
      }) }}"  #}
      class="outline-none cursor-pointer hover:text-red-600" type="button">-</a>
    </div>
    <a class="outline-none" href="{{ path('app_new_cart', {
      'id': product.id
    }) }}" >
      <input class="cursor-pointer py-4 px-6 bg-red-500 rounded-lg text-lg text-white outline-none" type="button" value="افزودن به سبد خرید" >
    </a>
  </div>
</div>
{% endblock %}